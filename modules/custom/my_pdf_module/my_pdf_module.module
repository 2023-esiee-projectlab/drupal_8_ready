<?php

/**
 * Implements hook_theme_suggestions_HOOK_alter() for node templates.
 */
function my_pdf_module_theme_suggestions_node_alter(array &$suggestions, array $variables) {
  // Check if the content type is "article".
  if ($variables['elements']['#node']->getType() === 'article') {
    // Add a custom template suggestion for articles.
    $suggestions[] = 'node--article-custom';
  }
}
/**
 * Implements hook_theme().
 */
function my_pdf_module_theme($existing, $type, $theme, $path): array {
  return [
    'node__article_custom' => [
      'variables' => ['test_var' => NULL],
    ],
  ];
}
/**
 * Implements hook_menu().
 */
function my_pdf_module_menu(): array {
  $items = [];
  $items['node/%node/pdf-export'] = [
    'title' => 'Export as PDF',
    'route_name' => 'my_pdf_module.export_pdf',
    'weight' => 10,
  ];
  return $items;
}

